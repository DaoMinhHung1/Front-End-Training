<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
    <body>
        <referenceBlock name="product.info.extrahint" remove="true" />
        <referenceBlock name="product.info.options.wrapper" remove="true" />
        

        <move element="product.info.review" destination="labelsauname" />
        <move element="product.info.sku" destination="labelsauname" after="product.info.review" />
        <move element="product.info.type" destination="product.info.main" after="product.price.tier"/>

        
        <referenceContainer name="columns.top">
             <container name="labelsauname"  htmlTag="div" htmlId="labelsauname" htmlClass="labelsauname" />
        </referenceContainer>

      
        <referenceContainer name="div.sidebar.additional" remove="true" />

        <referenceContainer name="content">
            <referenceContainer name="main.content">
            </referenceContainer>
        </referenceContainer>

    </body>

    
   
</page>