<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="content.top">
            <!-- Thêm liên kết mới vào bộ liên kết -->
            <block class="Magento\Framework\View\Element\Html\Link" name="custom.page.link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Minh Hùng</argument>
                    <argument name="path" xsi:type="string">magentop/layout/onepage</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
